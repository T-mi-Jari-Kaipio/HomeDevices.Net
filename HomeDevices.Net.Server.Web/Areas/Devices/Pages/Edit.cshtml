@page
@model HomeDevices.Net.Server.Web.Areas.Devices.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Device.Id" />
            <input type="hidden" asp-for="Device.CreatedOn" />
            <div class="form-group">
                <label asp-for="Device.Name" class="control-label"></label>
                <input asp-for="Device.Name" class="form-control" />
                <span asp-validation-for="Device.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.Description" class="control-label"></label>
                <input asp-for="Device.Description" class="form-control" />
                <span asp-validation-for="Device.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.MacAddress" class="control-label"></label>
                <input asp-for="Device.MacAddress" class="form-control" />
                <span asp-validation-for="Device.MacAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Device.CreatedOn" class="control-label"></label>
                 @Html.DisplayFor(model => model.Device.CreatedOn)
            </div>
            <div class="form-group">
                <label asp-for="Device.ModifiedOn" class="control-label"></label>
                @Html.DisplayFor(model => model.Device.ModifiedOn)
            </div>
            <div class="form-group">
                <label asp-for="Device.Location" class="control-label"></label>
                <select asp-for="Device.LocationId" asp-items="Model.Locations"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
